    t=0; p=0;
   do
   {
       cout<< "Numero de granjas : ";
       cin >> G;
   }
    while (G <=0); 
    for (i=1; i<=G;i++) 
   cout<< "Ingrese el promedio de huevos que pone una gallina :";
   cin>> l;
   cout<< "Ingrese el numero de huevos de la Granja No. " << i << ":" << "\n";
      cin>> H;
   for (j=1; j<=H; j++) 
      {
     do
      {
     cout<< "Ingrese el tamaÃ±o del huevo No. " << j << ":" << "en cm \n";
           cin>> T;
      }
      while ((T<=2) || (T>=10));
        t=t+T;
   }
      P=((t/H)/l);
      if (P>5)
        p=5;
      else
        p=4;
      cout<< "Precio es :"; 
	  cout<< p;

getch();
