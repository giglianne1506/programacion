#include "stdafx.h"
#include <conio.h>
#include "iostream"

using namespace std;

int main()



{
float n,s,c,dato,prom;
cout<<"ingrese la cantidad de datos";
cin>>n;
s=0; 
c=0; 

   while (c<n)
        {
                cout<<"ingrese datos";
                cin>>dato;
    s=s+dato;
                c=c+1;
        }
  prom=s/n;
  cout<<"prom"<<prom;
        
        
getch();
return 0;
}
